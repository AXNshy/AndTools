<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.jeff.mydemo.MainActivity">


    <com.jeff.titleview.TitleView
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:titleText="标题"
        app:leftText="返回"
        app:rightText="更多"
        app:titleTextColor="#ffffff"
        app:leftImgSrc="@mipmap/ic_launcher"
        app:rightImgSrc="@mipmap/ic_launcher"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/titleView"/>

    <com.jeff.bannercircleview.BannerCirlePlayer
        android:id="@+id/bannercircle"
        android:layout_width="368dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/titleView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
